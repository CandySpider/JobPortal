<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon-32x32.ico" />
    <title>@ViewData["Title"] - JobPortal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JobPortal.styles.css" asp-append-version="true" />
</head>
<body>

    <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
        <div class="col-md-3 mb-2 mb-md-0">
            <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none m-3">
                <img src="/images/favicon-32x32.png"/>
            </a>
        </div>

        <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
            <li><a asp-controller="Home" asp-action="Index" class="nav-link px-2 navbar-text2">Home</a></li>
            <li><a asp-controller="Jobs" asp-action="Index" class="nav-link px-2 navbar-text2">Jobs</a></li>
            <li><a asp-controller="Contact" asp-action="Index" class="nav-link px-2 navbar-text2">Contact</a></li>
            <li><a asp-controller="About" asp-action="Index" class="nav-link px-2 navbar-text2">About</a></li>
        </ul>

       @* <div class="col-md-3 text-end m-3">
            <button type="button" class="btn me-2">Login</button>
            <button type="button" class="btn navbar-button">Sign-up</button>
        </div>*@
        <partial name="_LoginPartial" />
    </header>

            @RenderBody()
        

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
