@model Candidate
<div class="background-image1">
<div class="container form-container">
    <h2>Let's upload your profile photo!</h2>
    @using (Html.BeginForm("ProfilePhotoUpload", "Candidate", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <input type="file" name="photo" id="photo" />
        <input type="submit" value="Upload" />
    }
    <h2>Let's upload a fresh resume!</h2>
    @using (Html.BeginForm("ResumeFileUpload", "Candidate", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <input type="file" name="resume" id="resume" />
        <input type="submit" value="Upload" />
    }
    <form class="form-check" asp-action="CreateProfile" method="post" role="form">
        <div class="form-group">
            <label asp-for="CandidateName">Name:</label>
            <input asp-for="CandidateName"type="text" class="form-control">
            <span asp-validation-for="CandidateName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number:</label>
            <input asp-for="PhoneNumber" type="number" class="form-control">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
       
        <button type="submit" class="btn navbar-button">Submit</button>
    </form>
</div>
<div class="space-div">

</div>
</div>